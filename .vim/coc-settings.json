{
  "languageserver": {
    "haskell": {
      "command": "hie-wrapper",
      "args": ["--lsp"],
      "rootPatterns": [ ".stack.yaml", "stack.yaml", "cabal.config", "package.yaml", "*.cabal", "cabal.project" ],
      "filetypes": [ "hs", "lhs", "haskell" ],
      "initializationOptions": {
        "languageServerHaskell": {
          "hlintOn": true,
          "maxNumberOfProblems": 10,
          "completionSnippetsOn": true
        }
      }
    }
  }
}
